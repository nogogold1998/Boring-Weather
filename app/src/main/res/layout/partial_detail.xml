<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="isDisplayCurrent"
            type="Boolean" />

        <variable
            name="dailyWeather"
            type="com.sunasterisk.boringweather.data.model.DailyWeather" />

        <variable
            name="hourlyWeather"
            type="com.sunasterisk.boringweather.data.model.HourlyWeather" />

        <variable
            name="unitSystem"
            type="com.sunasterisk.boringweather.util.UnitSystem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240">

        <TextView
            android:id="@+id/textTitlePressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_pressure"
            app:layout_constraintBottom_toTopOf="@+id/textTitleCloud"
            app:layout_constraintStart_toStartOf="@+id/guidelineDetailStart"
            app:layout_constraintTop_toBottomOf="@+id/textTitleUVIndex" />

        <TextView
            android:id="@+id/textTitleUVIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_uv_index"
            app:layout_constraintBottom_toTopOf="@+id/textTitlePressure"
            app:layout_constraintStart_toStartOf="@+id/guidelineDetailStart"
            app:layout_constraintTop_toBottomOf="@+id/textTitleWindSpeed" />

        <TextView
            android:id="@+id/textTitleVisibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_visibility"
            android:visibility="@{isDisplayCurrent ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/textTitleWindSpeed"
            app:layout_constraintStart_toStartOf="@+id/guidelineDetailStart"
            app:layout_constraintTop_toBottomOf="@+id/textTitleHumidity" />

        <TextView
            android:id="@+id/textTitleWindSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_wind_speed"
            app:layout_constraintBottom_toTopOf="@+id/textTitleUVIndex"
            app:layout_constraintStart_toStartOf="@+id/guidelineDetailStart"
            app:layout_constraintTop_toBottomOf="@+id/textTitleVisibility" />

        <TextView
            android:id="@+id/textTitleCloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_cloud"
            app:layout_constraintBottom_toTopOf="@+id/guidelineDetailBottom"
            app:layout_constraintStart_toStartOf="@+id/guidelineDetailStart"
            app:layout_constraintTop_toBottomOf="@+id/textTitlePressure" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineDetailTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/dp_16" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineDetailBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/dp_16" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineDetailStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/dp_32" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineDetailEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/dp_16" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineDetailMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />

        <TextView
            android:id="@+id/textHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/format_percent_decimal(isDisplayCurrent ? hourlyWeather.humidity : dailyWeather.humidity), default=@string/title_holder_percent}"
            app:layout_constraintBottom_toTopOf="@+id/textVisibility"
            app:layout_constraintStart_toStartOf="@+id/guidelineDetailMiddle"
            app:layout_constraintTop_toBottomOf="@+id/textTitleTile"
            app:layout_constraintVertical_chainStyle="spread"
            tools:text="@string/title_holder_percent" />

        <TextView
            android:id="@+id/textVisibility"
            distance="@{hourlyWeather.visibility}"
            unitSystem="@{unitSystem}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{isDisplayCurrent ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/textWindSpeed"
            app:layout_constraintStart_toStartOf="@+id/guidelineDetailMiddle"
            app:layout_constraintTop_toBottomOf="@+id/textHumidity"
            tools:text="@string/title_holder_decimal_number" />

        <TextView
            android:id="@+id/textWindSpeed"
            speed="@{isDisplayCurrent ? hourlyWeather.windSpeed : dailyWeather.windSpeed}"
            unitSystem="@{unitSystem}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/textUVIndex"
            app:layout_constraintStart_toStartOf="@+id/guidelineDetailMiddle"
            app:layout_constraintTop_toBottomOf="@+id/textVisibility"
            tools:text="@string/title_holder_decimal_number" />

        <TextView
            android:id="@+id/textUVIndex"
            titleTextViewId="@{@id/textTitleUVIndex}"
            uvIndexWeatherEntry="@{isDisplayCurrent ? hourlyWeather : dailyWeather}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_holder_float_number"
            app:layout_constraintBottom_toTopOf="@+id/textPressure"
            app:layout_constraintStart_toStartOf="@+id/guidelineDetailMiddle"
            app:layout_constraintTop_toBottomOf="@+id/textWindSpeed" />

        <TextView
            android:id="@+id/textPressure"
            pressure="@{isDisplayCurrent ? hourlyWeather.pressure : dailyWeather.pressure}"
            unitSystem="@{unitSystem}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/textCloud"
            app:layout_constraintStart_toStartOf="@+id/guidelineDetailMiddle"
            app:layout_constraintTop_toBottomOf="@+id/textUVIndex"
            tools:text="@string/title_holder_pressure" />

        <TextView
            android:id="@+id/textCloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/format_percent_decimal(isDisplayCurrent ? hourlyWeather.clouds : dailyWeather.clouds), default=@string/title_holder_percent}"
            app:layout_constraintBottom_toTopOf="@+id/guidelineDetailBottom"
            app:layout_constraintStart_toStartOf="@+id/guidelineDetailMiddle"
            app:layout_constraintTop_toBottomOf="@+id/textPressure"
            tools:text="@string/title_holder_percent" />

        <TextView
            android:id="@+id/textTitleTile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_current_details"
            android:textSize="@dimen/sp_25"
            android:visibility="@{isDisplayCurrent ? View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toStartOf="@+id/guidelineDetailStart"
            app:layout_constraintTop_toTopOf="@+id/guidelineDetailTop"
            app:layout_constraintVertical_chainStyle="spread" />

        <TextView
            android:id="@+id/textTitleHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_humidity"
            app:layout_constraintBottom_toTopOf="@+id/textTitleVisibility"
            app:layout_constraintStart_toStartOf="@+id/guidelineDetailStart"
            app:layout_constraintTop_toBottomOf="@+id/textTitleTile" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
